<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeB"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondologin" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrim2"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/editEmailAddress"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintRight_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="171dp" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:hint="Password"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintRight_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/editEmailAddress"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="171dp" />
    <!--
    <Button
        android:id="@+id/buttonRegister"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        style="@style/ButtonStraight"
        android:layout_height="40dp"
        android:text="Register"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintRight_toLeftOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="297dp" /> -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegister"
        style="@style/ButtonStraight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="Register"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintRight_toLeftOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/editPassword">

    </com.google.android.material.button.MaterialButton>
    <!--
    <Button
        android:id="@+id/buttonLogin"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        style="@style/ButtonStraight"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Login"
        app:layout_constraintLeft_toRightOf="@id/guideline3"
        app:layout_constraintRight_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="297dp"  /> -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogin"
        style="@style/ButtonStraight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/guideline3"
        app:layout_constraintRight_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/editPassword">

    </com.google.android.material.button.MaterialButton>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <ImageView
        android:id="@+id/imageFacebook"
        android:layout_width="64dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/facebook"
        android:layout_marginTop="170dp"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="521dp" />

    <ImageView
        android:id="@+id/imageApple"
        android:layout_width="130dp"
        android:layout_height="112dp"
        app:srcCompat="@drawable/apple"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
       app:layout_constraintEnd_toStartOf="@id/imageGoogle"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        tools:layout_editor_absoluteX="136dp"
        app:layout_constraintEnd_toEndOf="@id/imageGoogle"
        tools:layout_editor_absoluteY="502dp" />

    <ImageView
        android:id="@+id/imageGoogle"
        android:layout_width="106dp"
        android:layout_height="104dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:srcCompat="@drawable/google"
        android:layout_marginTop="150dp"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="502dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
