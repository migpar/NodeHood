<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/imagen"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondologos" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/scrim_title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="270dp"
        android:layout_height="102dp"
        android:fontFamily="@font/pottaone"
        android:text="NodeHood"
        android:textAlignment="center"
        android:textColor="@color/verdeA"
        android:textSize="50sp"
        app:layout_anchor="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        app:layout_constraintRight_toLeftOf="@id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/view2">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_margin_top"
            android:layout_marginBottom="@dimen/form_margin_top"
            android:fontFamily="@font/poppins"
            android:text="@string/username"
            android:textAlignment="center"
            android:textColor="@color/verdeA"
            android:textSize="30sp"
            android:layout_marginStart="@dimen/form_margin_top" />

        <ImageView
            android:id="@+id/imageUsuario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="@dimen/form_margin_top"
            android:layout_toEndOf="@+id/textView"
            app:layout_anchorGravity="end|center"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/luis"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/editprofile"
            style="@style/ButtonStraight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageUsuario"
            android:layout_marginStart="57dp"
            android:layout_marginTop="@dimen/form_margin_top"
            android:layout_toEndOf="@+id/textView"
            android:background="@drawable/bordes_redondos"
            android:fontFamily="@font/poppins"
            android:text="Edit"
            app:layout_constraintTop_toBottomOf="@id/imageUsuario" />

        <TextView
            android:id="@+id/descipcion"
            android:layout_width="173dp"
            android:layout_height="78dp"
            android:layout_below="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginStart="@dimen/form_margin_top"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginBottom="@dimen/form_margin_top"
            android:fontFamily="@font/poppins"
            android:text="@string/descripcion"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="204dp"
            android:layout_height="47dp"
            android:layout_below="@+id/descipcion"
            android:layout_alignStart="@+id/descipcion"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="54dp"
            android:text="Dark Theme"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="@dimen/form_margin_top"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="147dp"
            android:fontFamily="@font/poppins"
            android:text="Activity"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/form_margin_top"
        app:layout_constraintRight_toLeftOf="@id/guideline3"
        app:layout_constraintLeft_toRightOf="@id/guideline4"


        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="450dp"
            android:paddingBottom="500dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mis_realizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp">


            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="550dp"
            tools:context=".UserActivity">


            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottom_app_bar_menu"
                style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:menu="@menu/bottom_app_bar_menu" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="chat"
                android:src="@drawable/chat"
                app:layout_anchor="@id/bottom_app_bar_menu" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

